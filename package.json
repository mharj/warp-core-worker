{
	"name": "warp-core-worker",
	"version": "0.2.5",
	"description": "task runner which can run instant and timed tasks",
	"main": "./dist/index.js",
	"module": "./dist/index.mjs",
	"types": "./dist/index.d.ts",
	"exports": {
		".": {
			"types": "./dist/index.d.ts",
			"require": "./dist/index.js",
			"import": "./dist/index.mjs"
		}
	},
	"scripts": {
		"doc": "typedoc --plugin typedoc-plugin-mermaid",
		"build": "tsup src/index.mts --format cjs,esm --dts --clean",
		"test": "vitest test --run --no-isolate --coverage",
		"validate": "tsc --noEmit --project tsconfig.test.json",
		"lint": "eslint --ext .mts src",
		"test:ui": "vitest --ui"
	},
	"files": [
		"dist"
	],
	"mocha": {
		"exit": true,
		"extension": [
			"ts",
			"js"
		],
		"recursive": true,
		"require": [
			"ts-node/register",
			"source-map-support/register"
		],
		"reporters": [
			"spec",
			"mocha-junit-reporter"
		]
	},
	"nyc": {
		"check-coverage": true,
		"extension": [
			".ts",
			".js"
		]
	},
	"keywords": [
		"task",
		"async",
		"runner"
	],
	"author": "mharj",
	"license": "MIT",
	"devDependencies": {
		"@stylistic/eslint-plugin": "^2.9.0",
		"@stylistic/eslint-plugin-ts": "^2.9.0",
		"@types/node": "^18.19.56",
		"@types/sinon": "^17.0.3",
		"@types/uuid": "^10.0.0",
		"@typescript-eslint/eslint-plugin": "^8.9.0",
		"@typescript-eslint/parser": "^8.9.0",
		"@vitest/coverage-v8": "^2.1.2",
		"@vitest/ui": "^2.1.2",
		"c8": "^10.1.2",
		"eslint": "^8.57.1",
		"eslint-config-prettier": "^9.1.0",
		"eslint-config-standard": "^17.1.0",
		"eslint-import-resolver-typescript": "^3.6.3",
		"eslint-plugin-deprecation": "^3.0.0",
		"eslint-plugin-import": "^2.31.0",
		"eslint-plugin-prettier": "^5.2.1",
		"eslint-plugin-sonarjs": "^0.24.0",
		"mermaid": "^11.3.0",
		"nyc": "^17.1.0",
		"prettier": "^3.3.3",
		"sinon": "^19.0.2",
		"ts-node": "^10.9.2",
		"tslib": "^2.8.0",
		"tsup": "^8.3.0",
		"typedoc": "^0.26.10",
		"typedoc-plugin-mermaid": "^1.12.0",
		"typescript": "^5.6.3",
		"uuid": "^10.0.0",
		"vite": "^5.4.8",
		"vitest": "^2.1.2"
	},
	"dependencies": {
		"@avanio/logger-like": "^0.2.5",
		"@avanio/sleep": "^0.1.3",
		"cron": "^3.1.7",
		"node-abort-controller": "^3.1.1"
	}
}