{
	"compilerOptions": {
		"lib": ["es2021", "dom", "dom.iterable"],
		"module": "commonjs",
		"target": "es2021",
		"rootDir": "./src",
		"outDir": "./dist",
		"sourceRoot": "./src",
		"types": ["node"],
		"sourceMap": true,
		"strict": true,
		"declaration": true,
		"removeComments": false,
		"inlineSources": true,
		"inlineSourceMap": false,
		"forceConsistentCasingInFileNames": true,
		"noImplicitReturns": true,
		"noImplicitThis": true,
		"noImplicitAny": true,
		"importHelpers": true,
		"strictNullChecks": true,
		"noUnusedLocals": true,
		"esModuleInterop": false
	},
	"typedocOptions": {
		"entryPoints": ["src/index.ts"],
		"out": "docs"
	},
	"include": ["src/**/*", "src/**/**/*"],
	"exclude": ["node_modules", "**/*.spec.ts", "test","**/*.test.ts"],
	"ts-node": {
		"files": true
	}
}
